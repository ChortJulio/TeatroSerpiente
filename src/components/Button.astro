---
interface Props {
  children?: any;
  onClick?: (e: MouseEvent) => any;
  id?: string;
  className?: string;
  target?: string;
  url: string;
}

const { children, onClick, id, className, target, url }: Props = Astro.props;
---

<a
  href={url}
  target={`${target ?? "_blank"}`}
  rel="noopener noreferrer"
  class={`lg:text-2xl md:px-5 md:text-xl text-xs w-fit font-medium no-underline px-3 py-3 border border-solid border-white rounded-full uppercase ${className ?? ""}`}
>
  {children}
</a>
